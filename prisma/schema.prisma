generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExpenseType {
  FACTURA
  BOLETA
}

enum SourceType {
  MANUAL
  DOCUMENT
}

enum Plan {
  FREE
  PREMIUM
}

enum Role {
  USER
  ADMIN
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String?
  role       Role     @default(USER)
  plan       Plan     @default(FREE)
  telegramId String?
  // Verificaci칩n de email
  emailVerified      Boolean  @default(false)
  verificationCode   String?
  verificationExpires DateTime?
  // Suscripci칩n / Trial
  trialEnds          DateTime?
  planExpires        DateTime?
  // Recuperaci칩n de contrase침a
  resetCode           String?
  resetExpires        DateTime?
  // OAuth
  googleId   String?  @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  documents  Document[]
  expenses   Expense[]
  budgets    Budget[]
  payments   Payment[]
}

model Document {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  filename   String
  mimeType   String
  storagePath String?
  uploadedAt DateTime @default(now())
  analysis   Analysis?
  expense    Expense?
}

model Analysis {
  id         String   @id @default(uuid())
  document   Document @relation(fields: [documentId], references: [id])
  documentId String   @unique
  summary    String
  total      Float?
  details    Json?
  createdAt  DateTime @default(now())
}

model AiCache {
  id         String   @id @default(uuid())
  key        String   @unique
  value      Json
  ttl        Int      // TTL seconds
  createdAt  DateTime @default(now())
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  expenses  Expense[]
}

model Budget {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  month     Int
  year      Int
  amount    Float
  currency  String   @default("PEN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, year, month])
}

model Expense {
  id          String      @id @default(uuid())
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  type        ExpenseType
  source      SourceType
  issuedAt    DateTime
  provider    String
  description String?
  amount      Float
  currency    String      @default("PEN")
  category    Category?   @relation(fields: [categoryId], references: [id])
  categoryId  String?
  document    Document?   @relation(fields: [documentId], references: [id])
  documentId  String?     @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Payment {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  provider  String   // e.g., FLOW
  orderId   String   @unique
  period    String   // MONTHLY | ANNUAL
  currency  String   // USD | PEN
  amount    Float
  status    String   // PENDING | PAID | CANCELLED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}